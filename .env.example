# Database
# Local Docker (PostgreSQL 16 with PostGIS):
# DATABASE_URL="postgresql://convoy:convoy123@localhost:5432/convoy?schema=public"
#
# Neon (PostgreSQL 17 - recommended for cloud):
DATABASE_URL="postgresql://user:password@ep-xxx-xxx.region.aws.neon.tech/convoy?sslmode=require"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT - Generate secure secret with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# App
NODE_ENV=development
BACKEND_PORT=3001
FRONTEND_PORT=3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# CORS
FRONTEND_URL=http://localhost:3000

# MapTiler (get free API key from https://cloud.maptiler.com)
NEXT_PUBLIC_MAPTILER_API_KEY=your-maptiler-api-key-here
